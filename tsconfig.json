{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist/ejs",
    "target": "ES2015",
    "module": "ES2020",
    "moduleResolution": "node",
    "composite": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["esnext", "dom"],
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["./src/**/*.ts", "src/snippetEntry.js"],
  "exclude": ["node_modules", "dist"]
}
